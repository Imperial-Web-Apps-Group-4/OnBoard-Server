{
    "env": {
        "node": true,
        "es6": true
    },
    "plugins": [
      "eslint-plugin-html"
    ],
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
          "off"
        ],
        "no-var": [
          "error"
        ]
    }
}
